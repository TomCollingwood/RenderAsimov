CFLAGS=-I${RMANTREE}/include
LIBS=-L${RMANTREE}/lib -lprman -lm
RENDERER=render
DYLD_LIBRARY_PATH=${RMANTREE}/lib

SCENE=position

../RIB/${SCENE}.rib : ${SCENE}.gen
	LD_LIBRARY_PATH=${RMANTREE}/lib ./${SCENE}.gen $(_x) $(_y) $(_z) $(_rotatex) $(_rotatey) >../RIB/${SCENE}.rib

${SCENE}.gen : ${SCENE}.c
	cc ${CFLAGS} -o ${SCENE}.gen  ${SCENE}.c ${LIBS}

clean :
	rm -f *.tiff *.gen position.rib
